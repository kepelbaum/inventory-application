extends layout

block content

  h1 category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')

    h2(style='font-size: 1.5rem;') items
    if category_items.length
      dl
        each item in category_items
          dt
            a(href=item.url) #{item.name}
          dd #{item.price}
    else
      p This category has no items.
    
    hr
    p
        a(href=category.url+'/delete') Delete Category
    p
        a(href=category.url+'/update') Update Category